<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        package="ru.recoilme.freeamp"
        android:versionCode="124"
        android:versionName="1.2.4">
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="19"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_SETTINGS"/>

    <application android:icon="@drawable/icon" android:label="@string/app_name" android:theme="@style/theme">
        <activity android:name=".player.ActPlayer"
                  android:theme="@style/player"
                  android:launchMode="singleTop"
                  android:configChanges="keyboardHidden|orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".playlist.ActPlaylist"
                  android:configChanges="keyboardHidden|orientation|screenSize">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="ru.recoilme.mielophone.player.ViewPlayer" />
        </activity>
        <activity android:name="ru.recoilme.freeamp.playlist.ViewLogin"
                  android:configChanges="keyboardHidden|orientation|screenSize"/>
        <activity android:name=".artworks.ActArtworks"
                  android:configChanges="keyboardHidden|orientation|screenSize">
            <meta-data
                    android:name="android.support.PARENT_ACTIVITY"
                    android:value="ru.recoilme.mielophone.player.ViewPlayer" />
        </activity>
        <activity android:name="me.piebridge.curl.Demo"
                  android:configChanges="keyboardHidden|orientation|screenSize"/>
        <receiver android:name=".player.RcvMediaControl">
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
            </intent-filter>
        </receiver>
        <service android:name="ru.recoilme.freeamp.player.ServicePlayer">
            <intent-filter>
                <action android:name="ru.recoilme.freeamp.player.action.TOGGLE_PLAYBACK" />
                <action android:name="ru.recoilme.freeamp.player.action.PLAY" />
                <action android:name="ru.recoilme.freeamp.player.action.PAUSE" />
                <action android:name="ru.recoilme.freeamp.player.action.SKIP" />
                <action android:name="ru.recoilme.freeamp.player.action.REWIND" />
                <action android:name="ru.recoilme.freeamp.player.action.STOP" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.example.android.musicplayer.action.URL" />
                <data android:scheme="http" />
            </intent-filter>
                </service>
    </application>
</manifest>
